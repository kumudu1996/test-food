      "options": {
        "cwd": "${workspaceFolder}\\foodiesapi",
        "env": {
          "JAVA_HOME": "C:\\Program Files\\Eclipse Adoptium\\jdk-17.0.18.8-hotspot",
          "PATH": "C:\\Program Files\\Eclipse Adoptium\\jdk-17.0.18.8-hotspot\\bin;${env:PATH}"
        }
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
